<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final.SubPagesRaw.Tiger"
             >
    <VerticalStackLayout>
        <Label 
            Text="Tiger Roll"
            FontSize="40"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Description"
            VerticalOptions="Center"
            HorizontalTextAlignment="Start"
            FontSize="25"
            FontAttributes="Bold"/>
        <Label
            Text="Tuna, white tuna, and yellowtail soaked in juzu and siracha, with deep fried crab sticks and avocado - topped with salmon and finished with juzu and 4 season sauce"
            VerticalOptions="StartAndExpand"
            HorizontalTextAlignment="Start"
            FontAttributes="Italic"/>
        <Button
            x:Name="AddToOrder" Text="Add to Order" BackgroundColor="Orange" TextColor="Black" FontAttributes="Bold"
                    Clicked="addToOrderButton_Clicked" WidthRequest="300" VerticalOptions="End"/>
    </VerticalStackLayout>
</ContentPage>